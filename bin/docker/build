#! /usr/bin/env bash

source "bin/_support/check.sh"

set +e
check "Docker running" "docker info  > /dev/null 2>&1" "sudo dockerd"
set -e

docker build . -t epicenter --build-arg HEX_GEOMETER_READ_ONLY_KEY="${HEX_GEOMETER_READ_ONLY_KEY}" --build-arg HEX_OBAN_UI_KEY="${HEX_OBAN_UI_KEY}"
#docker tag epicenter "${DEPLOYMENT_ECR}:latest"

