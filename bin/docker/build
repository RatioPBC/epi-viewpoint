#! /usr/bin/env bash

source "bin/_support/check.sh"

set +e
check "Docker running" "docker info  > /dev/null 2>&1" "sudo dockerd"
set -e

EPICENTER_SSL_KEY=$(cat tmp/ssl/viewpoint-staging.gcp.geometer.dev.key)
EPICENTER_SSL_CRT=$(cat tmp/ssl/viewpoint-staging.gcp.geometer.dev.crt)

docker build . -t epicenter --build-arg HEX_GEOMETER_READ_ONLY_KEY="${HEX_GEOMETER_READ_ONLY_KEY}" --build-arg HEX_OBAN_UI_KEY="${HEX_OBAN_UI_KEY}" --build-arg EPICENTER_SSL_KEY="${EPICENTER_SSL_KEY}" --build-arg EPICENTER_SSL_CRT="${EPICENTER_SSL_CRT}"
#docker tag epicenter "${DEPLOYMENT_ECR}:latest"
