doctype html
html lang="en"
  head
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    meta name="viewport" content="width=device-width, initial-scale=1.0"

    = csrf_meta_tag()
    = live_title_tag assigns[:page_title] || "", suffix: " Â· Epicenter"

    link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png"
    link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png"
    link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png"
    link rel="manifest" href="/site.webmanifest"

    link phx-track-static=true rel="stylesheet" href="#{ Routes.static_path(@conn, "/css/app.css") }"
    script defer=true phx-track-static=true type="text/javascript" src="#{ Routes.static_path(@conn, "/js/app.js") }"
  body
    = if Map.get(assigns, :show_nav, true) do
      header#nav
        #nav-inner
          #nav-items
            #nav-left
              = link "Epicenter", to: "/"
            #nav-right
              = live_redirect "Import", to: "/import"
              = live_redirect "Admin", to: "/admin"
    main role="main"
      = @inner_content
